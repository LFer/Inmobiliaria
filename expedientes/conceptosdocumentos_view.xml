<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
<!--********************* VISTA DE LOS GASTOS ASOCIADOS A LOS EXPEDIENTES ****************-->

    <record model="ir.ui.view" id="view_conceptosdocumentos_form">
        <field name="name">conceptosdocumentos.form</field>
        <field name="model">conceptosdocumentos</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Concepto" version="7.0">
                <!--<header>
                    <button name="action_nueva_factura" type="object" string="Facturar" confirm="Â¿Confirma facturar el concepto?" class="oe_highlight"/>
                </header>-->
                <sheet>
                    <group colspan="2" col="2">
						<field name="name"/>
                        <field name="fecha" />
                        <field name="partner_id" on_change="falta_cliente(partner_id, facturar)" />
                        <!-- <field name="partner_id" attrs="{'invisible': [('mostrar','=',False)]}"/> -->
                        <field name="product_id" on_change="product_id_change(product_id)"/>
                        <field name="cantidad"/>
                        <!--<field name="dtounidad" />-->
                        <field name="iva" placeholder="IVA"/>
                        <field name="preciounidad" />  
                        <field name="facturar" on_change="falta_cliente(partner_id, facturar)" />
						<!--<field name="mostrar" />-->                          
                    </group>                
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_conceptos_tree" model="ir.ui.view">
        <field name="name">conceptos.tree</field>
        <field name="model">conceptosdocumentos</field>
        <field eval="1" name="priority"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">       
            <tree string="Concepto" version="7.0">
                        <field name="name"/>
                        <field name="fecha" />
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="cantidad" />
                        <!--<field name="dtounidad" />-->
                        <field name="iva" placeholder="IVA"/>
                        <field name="preciounidad" />  
                        <field name="facturar" />                        
            </tree>        
        </field>
    </record>
<!--********************************************************************************** -->           
</data>
</openerp>
